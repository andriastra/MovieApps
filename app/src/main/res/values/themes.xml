<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyMovieApps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.MyMovieApps.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>


    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/color_selector_chip_bg</item>
        <item name="android:textColor">@color/color_selector_chip</item>
        <item name="android:textStyle">bold</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/color_selector_chip_stroke</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.App.Chip.Uncheckable" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/unselectedChipBackground</item>
        <item name="android:textColor">@color/unselectedChipTextColor</item>
        <item name="chipCornerRadius">4dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">30dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChipTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CollapsedExpandedTitleText" parent="Theme.MyMovieApps.NoActionBar">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/teal_700</item>
    </style>
</resources>